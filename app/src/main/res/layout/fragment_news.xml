<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Controllers.Fragments.NewsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_news_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/fragment_news_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_news_recycler_view"
        app:layout_constraintRight_toRightOf="@+id/fragment_news_recycler_view"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_news_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_news_recycler_view"
        app:layout_constraintVertical_bias="0.8"
        android:visibility="gone"
        android:indeterminate="true"/>

</android.support.constraint.ConstraintLayout>
