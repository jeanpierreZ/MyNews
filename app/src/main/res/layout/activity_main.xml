<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <Button
            android:id="@+id/activity_main_button_topstories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="See Top Stories of the New York Times"/>

        <Button
            android:id="@+id/activity_main_button_mostpopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="See Most Popular of the New York Times"/>

        <Button
            android:id="@+id/activity_main_button_articlesearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="See Article Search of Technology of the NY Times"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/activity_main_text_topstories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="top stories !"
            android:gravity="center_horizontal"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/activity_main_text_mostpopular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="most popular !"
            android:gravity="center_horizontal"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/activity_main_text_articlesearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="article search !"
            android:gravity="center_horizontal"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>